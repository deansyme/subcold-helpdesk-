# Subcold Helpdesk Environment Variables (Example)
# Copy this file to .env and update the values

# Database (Vercel Postgres)
# These will be automatically set by Vercel when you connect a Postgres database
DATABASE_URL="postgres://..."
DIRECT_URL="postgres://..."

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="https://support.subcold.com"
NEXTAUTH_SECRET="generate-a-secure-secret-for-production"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://support.subcold.com"
NEXT_PUBLIC_SITE_NAME="Subcold Support"
